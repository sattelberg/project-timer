<h1> <%=@cust.company%> </h1>
<table>
  <tr>
    <th>id</th>
    <th>Company</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>
  <tr>
    <td><%=@cust.id%></td>
    <td><%=@cust.company%></td>
    <td><%=@cust.address%></td>
    <td><%=@cust.city%></td>
    <td><%=@cust.state%></td>
    <td><%=@cust.zip%></td>
    <td><%=@cust.created_at%></td>
    <td><%=@cust.updated_at%></td>
    <td><%=link_to 'edit', {:controller => :customers, :action => 'edit', :id => @cust.id},:class=>"btn-edit"%></td>
    <td><%=button_to 'Delete', {:controller => :customers, :action => 'destroy', :id => @cust.id}, {:method => :delete, :form => {:class => "btn-delete"}}%></td>
  </tr>
</table>
